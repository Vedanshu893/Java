public class Solution {
    public int solve(String A) {

        int count =0;

        StringBuilder sb = new StringBuilder(A);

        for (int i=0; i<sb.length()-2; i++){
            char c = sb.charAt(i);
            char c2 = sb.charAt(i+1);
            char c3 = sb.charAt(i+2);
            
            if(c=='b' && c2=='o' && c3=='b'){
                count +=1;
            }

        }

        return count;
    }
}
